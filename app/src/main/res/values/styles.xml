<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ViewCardViewStyle">
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="cardElevation">0dp</item>
        <item name="cardBackgroundColor">@android:color/transparent</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="ImageCardViewStyle">
        <item name="cardBackgroundColor">@android:color/transparent</item>
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="cardElevation">0dp</item>
    </style>

    <style name="AppSmallTitleStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="AppEditTextStyle">
        <item name="android:textCursorDrawable">@drawable/all_et_cursor_color</item>
        <item name="android:gravity">center|start</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingHorizontal">10dp</item>
        <item name="android:background">@drawable/search_et_bg</item>
    </style>

    <style name="AppButtonStyle">
        <item name="android:stateListAnimator">@null</item>
        <item name="android:background">@drawable/btn_selector</item>
    </style>

    <style name="ImageViewStyle">
        <item name="placeholderImage">@color/empty_iv_bg_color</item>
    </style>

    <style name="TransparentDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="AppFragmentAnimStyle">
        <item name="fragmentEnterAnim">@anim/nav_enter_anim</item>
        <item name="fragmentExitAnim">@anim/nav_exit_anim</item>
        <item name="fragmentPopEnterAnim">@anim/nav_pop_enter_anim</item>
        <item name="fragmentPopExitAnim">@anim/nav_pop_exit_anim</item>
    </style>

</resources>