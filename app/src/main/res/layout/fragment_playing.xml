<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:gravity="center"
    android:orientation="vertical">

    <studio.mandysa.music.ui.view.SquareLayout
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/music_cover_card_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="35dp"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:cardElevation="5dp">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/music_cover"
                style="@style/ImageViewStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </androidx.cardview.widget.CardView>

    </studio.mandysa.music.ui.view.SquareLayout>

    <TextView
        android:id="@+id/song_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="35dp"
        android:ellipsize="end"
        android:gravity="center"
        android:lines="1"
        android:text="@string/test"
        android:textColor="@android:color/white"
        android:textSize="19sp" />

    <TextView
        android:id="@+id/singer_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="35dp"
        android:layout_marginTop="7dp"
        android:ellipsize="end"
        android:gravity="center"
        android:lines="1"
        android:text="@string/test"
        android:textColor="@color/translucent_white"
        android:textSize="16sp" />

    <SeekBar
        android:id="@+id/playback_seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/default_margin"
        android:background="@null"
        android:duplicateParentState="false"
        android:progressBackgroundTint="@color/translucent_white"
        android:progressTint="@android:color/white"
        android:thumbTint="@android:color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="40dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/play_skip_previous"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="30dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_skip_previous"
            android:tint="@android:color/white"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/play_or_pause"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:tint="@android:color/white"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/play_skip_next"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="30dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_skip_next"
            android:tint="@android:color/white"
            tools:ignore="ContentDescription" />
    </LinearLayout>

    <SeekBar
        android:id="@+id/volume_seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/default_margin"
        android:background="@null"
        android:duplicateParentState="false"
        android:progressBackgroundTint="@color/translucent_white"
        android:progressTint="@android:color/white"
        android:thumbTint="@android:color/white" />

</LinearLayout>